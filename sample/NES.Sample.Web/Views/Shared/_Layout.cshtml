<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <header>
        <div class="inner">
            <a href="/" class="logo">NES<span>.Sample</span></a>
            <nav>
                <ul>
                    <li><a href="#">Received Messages</a></li>
                    <li><a href="#">Sent Messages</a></li>
                    <li><a href="#">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div id="wrapper">
        <section id="main">
            @RenderBody()
        </section>
        <section id="send-message">
            <h2>If you've got something to say, type it in the box below and hit submit!</h2>
            <form>
                <fieldset>
                    <div class="editor-label"><label for="message">Message</label></div>
                    <div class="editor-field"><textarea id="message" name="message" cols="68" rows="1">What's on your mind?</textarea></div>
                    <input type="submit" value="Submit" />
                </fieldset>
            </form>
        </section>
    </div>
    <footer>
        <div class="inner">
            Find out more at <a href="https://www.github.com/elliotritchie/nes" target="_blank">github.com/elliotritchie/nes</a>.
        </div>
    </footer>
</body>
</html>
